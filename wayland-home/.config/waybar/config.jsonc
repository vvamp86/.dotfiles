  // Music
  "mpris": {
    "format": "{player_icon}  {dynamic}",
    "format-paused": "{status_icon} {dynamic}",
    "format-stopped": "",
    "ignore-list": ["vesktop,Discord"],
    "player-icons": {
      "brave": "",
      "default": "",
      "spotify": "",
      "vlc": "",
      "mpv": ""
    },
    "status-icons": {
      "paused": "▶",
      "playing": "⏸"
    },
    "max-length": 40,
    "interval": 1,
    "tooltip": true
  },

  // SWAY WORKSPACES
  "sway/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
        "1": " ",
        "2": " ",
        "3": " ",
        "4": " ",
        "5": " ",
        "6": "6",
        "7": "7",
        "8": "8",
        "9": "9",
        "10": " ",
    },
    "active": "",
    "sort-by-number": true
  },


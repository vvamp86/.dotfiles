/* ======================================================== */
/* Power Related                                            */
/* ======================================================== */
  "custom/ppd-status": {
    "exec": "~/.config/sway/scripts/ppd-status",
    "return-type": "json",
    "format": "{}",
    "interval": 5,
    "tooltip": true,
    "on-click": "~/.config/sway/scripts/power-profiles",
    "on-click-right": "powerprofilesctl set $(powerprofilesctl get | sed -e 's/power-saver/balanced/' -e 's/balanced/performance/' -e 's/performance/power-saver/')",
    "on-scroll-up": "powerprofilesctl set performance",
    "on-scroll-down": "powerprofilesctl set power-saver"
  },

  "custom/powermenu": {
    "format": " ",
    "tooltip": "Power Menu",
    "on-click": "~/.config/sway/scripts/powermenu",
    "on-click-right": "swaymsg exec '~/.config/sway/scripts/powermenu'"
  },

/* ======================================================== */
/* Application Launchers                                    */
/* ======================================================== */
  "custom/terminal": {
    "format": " ",
    "tooltip": "Terminal",
    "on-click": "swaymsg exec alacritty",
//  "on-click-right": "swaymsg exec kitty",  // Optional: right click for different terminal
    "interval": "once"
  },

  "custom/browser": {
    "format": " ",
    "tooltip": "Browser",
    "on-click": "swaymsg exec brave",
    "on-click-right": "swaymsg exec librewolf",
    "interval": "once"
  },

  "custom/files": {
    "format": " ",
    "tooltip": "File Manager",
    "on-click": "swaymsg exec thunar ~/",
    "on-click-right": "alacritty -T waybar_yazi -e yazi",
    "interval": "once"
  },

  "custom/mail": {
    "format": " ",
    "tooltip": "Email",
    "on-click": "swaymsg exec thunderbird",
    "interval": "once"
  },

  "custom/text": {
    "format": " ",
    "tooltip": "Discord",
    "on-click": "swaymsg exec vesktop",
//  "on-click-right": "swaymsg exec slack",
    "interval": "once"
  },

  "custom/music": {
    "format": " ",
    "tooltip": "Spotify",
    "on-click": "swaymsg exec LD_PRELOAD=/usr/local/lib/spotify-adblock.so spotify",
    "on-click-right": "swaymsg exec youtube-music",
    "interval": "once"
  },

  "custom/notes": {
    "format": " ",
    "tooltip": "Obsidian",
    "on-click": "swaymsg exec obsidian",
    "interval": "once"
  }
}

{
  "layer": "top",
  "position": "bottom",
  "output": ["HDMI-A-1", "DP-1", "eDP-1"],

  "modules-left": [
    "custom/launcher",
    "clock",
    "sway/workspaces",
    "sway/mode"
/*  "sway/window",  */
  ],

  "modules-center": [
    "custom/terminal",
    "custom/browser",
    "custom/files",
    "custom/mail",
    "custom/text",
    "custom/music",
    "custom/notes",
    "mpris",
  ],

  "modules-right": [
    "network",
    "wireplumber",
    "backlight",
    "cpu",
    "memory",
    "disk",
    "tray",
    "custom/ppd-status",
    "battery",
/*  "custom/updates", */
    "custom/powermenu"
  ],

  // Screen Brightness
  "backlight": {
    "format": "{icon} {percent}%",
    "format-icons": ["󰃞", "󰃟", "󰃠"],
    "on-click": "brightnessctl set 5%+",
    "on-click-right": "brightnessctl set 5%-",
    "on-scroll-up": "brightnessctl set 0.5%+",
    "on-scroll-down": "brightnessctl set 0.5%-"
  },

  // Audio
  "wireplumber": {
    "tooltip": false,
    "format": "{icon} {volume}%",
    "format-muted": "󰝟 muted",
    "format-bluetooth": " {icon} {volume}%",
    "format-headphones": " {volume}%",
    "on-click": "pavucontrol",
    "on-click-right": "wpctl set-mute   @DEFAULT_AUDIO_SINK@ toggle",
    "on-scroll-up":   "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.5%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.5%-",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
  },

/*
  "network": {
    "tooltip": true,
    "format-wifi": " ",
    "rotate": 0,
    "format-ethernet": "󰈀 ",
    "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
    "format-linked": "󰈀 {ifname} (No IP)",
    "format-disconnected": "󰖪 ",
